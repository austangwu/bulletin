<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/controllers.js"></script>
    <script src="/javascripts/skycons.js"></script>
    <script src="/javascripts/angular-skycons.js"></script>
  </head>

  <body ng-app="bulletin">
  	    <div class="section translucent-bg bg-image-3 clear">
    	  	<div class="container">
                <div class="row weather" ng-controller="WeatherController">
                    <h3>Weather</h3>
                    <div class="col-md-3" ng-repeat="day in getDays(4)">
                        <h3>{{day.time * 1000 | date}}</h3>
                        <div class="media">
                            <div class="media-left">
                                <skycon icon="day.icon"></skycon>
                            </div>
                            <div class="media-body">
                                <p>
                                    High of {{day.temperatureMax}}°, Low of {{day.temperatureMin}}°<br>{{day.summary}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row calendar" ng-controller="CalendarController">
                    <h3>Calendar</h3>
                    <ul>
                        <li ng-repeat="event in getEvents(5)">
                            {{event.summary}} <br>{{event.start}}                            
                        </li>
                    </ul>
                </div>
    	  	</div>
        </div>
  	</body>
</html>
